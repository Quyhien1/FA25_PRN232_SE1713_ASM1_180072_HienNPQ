@model IEnumerable<OEMEVWarrantyManagementSystem.Repositories.HienNPQ.Models.BookingHienNpq>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success">Create New</a>
</p>

<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th>ID</th>
        <th>Station</th>
        <th>Vehicle Type</th>
        <th>Battery</th>
        <th>Start</th>
        <th>End</th>
        <th>Price/Hr</th>
        <th>Status</th>
        <th>License Plate</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.BookingHienNpqid</td>
            <td>@b.StationName</td>
            <td>@b.VehicleType</td>
            <td>@b.BatteryCapacity</td>
            <td>@b.StartTime</td>
            <td>@b.EndTime</td>
            <td>@b.PricePerHour</td>
            <td>@b.Status</td>
            <td>@b.SupportInfoHienNpq?.LicensePlate</td>
            <td>
                <a asp-action="Details" asp-route-id="@b.BookingHienNpqid">Details</a> |
                <a asp-action="Edit" asp-route-id="@b.BookingHienNpqid">Edit</a> |
                <a asp-action="Delete" asp-route-id="@b.BookingHienNpqid">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
